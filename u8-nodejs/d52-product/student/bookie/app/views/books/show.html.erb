<div class="container">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Name:</strong>
    <%= @book.name %>
  </p>

  <p>
    <strong>Author:</strong>
    <%= @book.author %>
  </p>

  <p>
    <strong>Source:</strong>
    <%= link_to @book.source, @book.source, target: '_blank' %>
  </p>

  <%= link_to 'Edit Book', edit_book_path(@book), class: 'btn btn-primary' %>
  <%= link_to 'Back', books_path, class: 'btn' %>
</div>
