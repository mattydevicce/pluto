<div class="container">
  <h1>Listing Photos</h1>

  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Name</th>
        <th>Format</th>
        <th>Width</th>
        <th>Height</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @photos.each do |photo| %>
        <tr>
          <td>
            <% if photo.processed? %>
              <%= image_tag photo_path(photo, format: ['thumb', photo.format].join('.')) %>
            <% else %>
              <%= image_tag 'processing-photo.gif' %>
            <% end %>
          </td>
          <td><%= photo.name %></td>
          <td><%= photo.format %></td>
          <td><%= photo.width %></td>
          <td><%= photo.height %></td>
          <td><%= link_to 'Show', photo %></td>
          <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
          <td><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Photo', new_photo_path %>
</div>
