<% @views.each do |view| %>
  <div class="row">
    <div style="background-color: #EEEEEE; padding: 0.5em; margin-bottom: 0.5em;">&nbsp;<%= File.basename(File.basename(view, '.*'), '.*').titleize %></div>
    <div class="small-12 columns">
      <%= render file: view %>
      <details>
        <summary>View Code</summary>
        <pre><%= File.read view %></pre>
      </div>
    </div>
    <br />
  </div>
<% end %>
